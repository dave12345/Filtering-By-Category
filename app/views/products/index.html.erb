<div class="row">
  <div class="small-4 columns">
    <h2>Listing Products</h2>
    <p><%= select_tag "Categories",options_from_collection_for_select(Category.all, 'id', 'name', params[:category_id]), prompt:"Filter By Category", id: "category_select" %></p>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= number_to_currency(product.pricing) %></td>
          <td><%= product.category.name if product.category %></td>
          <td><%= link_to "Show", product_path(product) %></td>
          <td><%= link_to "Edit", edit_product_path(product) %></td>
          <td><%= link_to "Delete", product_path(product), method: :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="small-4 columns">
    <%= link_to "New Product", new_product_path, prompt: "are you sure?", class: "tiny button alert radius" %>
  </div>
</div>